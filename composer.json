{
    "name": "mattbates/cognito-selfhosted-ui",
    "description": "Self-hosted replacement UI for AWS Cognito Hosted UI",
    "type": "project",
    "require": {
        "php": "^8.1",
        "aws/aws-sdk-php": "^3.316",
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7",
        "symfony/http-foundation": "^6.4",
        "symfony/routing": "^6.4",
        "bacon/bacon-qr-code": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php bin/post-install"
        ],
        "post-update-cmd": [
            "@php bin/post-install"
        ]
    }
}
